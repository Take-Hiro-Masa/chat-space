%div.chat-main
  %div.main-header
    %div.main-header__left-box
      %h2.main-header__left-box__current-group
        = @group.name
      %ul.main-header__left-box__member-list 
        Member :
        -@group.users.each do|user|
          = "#{user.name}"
      = link_to edit_group_path(@group.id) do
        %p.main-header__edit-btn
          EDIT
  %div.messages
    = render @messages
    %div.message
      %div.message__upper-info
        %p.message__upper-info__talker
        %p.message__upper-info__date
      %p.message__text
  %div.form
    %div.new_message
      -# %div.input-box
      -#   %input.input-box__text{type: "text", name: "message[content]", placeholder: "type a message"}
      -#   %label{class: "input-box__image"}
      -#     = icon('fas', 'image')
      -#     %input.input-box__image__file{type: "file"}
      -# %input.submit-btn{type: "submit", value: "Send", name: "commit"}
      .input-box
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'input-box__image' do
            = icon('fas', 'image')
            = f.file_field :image, class: 'input-box__image__file'
          = f.submit 'Send', class: 'submit-btn'