%div.message{"data-message-id": message.id }
  %div.message__upper-info
    %p.message__upper-info__talker
      = message.user.name
    %p.message__upper-info__date
      =message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.message__lower
    - if message.content.present?
      %p.message__lower__text
        = message.content
    = image_tag message.image.url, class: 'message__lower__image' if message.image.present?